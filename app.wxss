/**app.wxss**/
@import "libs/weui.wxss";

page {
    background-color: #fff;
    box-sizing: border-box;
}

swiper {
    width: 100%;
}

swiper image {
    width: 100%;
}

.container {
    height: 100%;
    width: 100%;
    display:flex;
    flex-direction:column;
    align-items:center;/*垂直居中*/
    justify-content: center;/*水平居中*/
    box-sizing: border-box;
}

.ui-main {
    box-sizing: border-box;
}

view {
    box-sizing: border-box;
}

.ui-empty {
    /*empty-address.png*/
    padding-top: 300rpx;
}

.ui-empty__icon {
    display: block;
    width: 128rpx;
    height: 136rpx;
    margin: 0 auto 32rpx;
}

.ui-empty__text {
    font-size: 30rpx;
    color: #999;
    text-align: center;
}

button {
    display: block;
    line-height: 1;
    font-size: 0;
    padding: 0;
    border: none;
    background-color: #fff;
    border-radius: 0;
}

button::hover {
    border-style: none;
}

button:after {
    border-style: none;
}

button::after {
    border-style: none;
}