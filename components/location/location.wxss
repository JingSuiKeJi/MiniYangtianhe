.ui-authorize {
    position: fixed;
    left: 0;
    top: 0;
    width: 750rpx;
    height: 100%;
    z-index: 1010;
}

.ui-authorize__bg {
    position: fixed;
    left: 0;
    top: 0;
    width: 750rpx;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
}

.ui-dialog__bd {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 590rpx;
    height: 330rpx;
    margin: auto;
    background-color: #fff;
    box-sizing: border-box;
    /*border: 1px solid #FFAFC6;*/
