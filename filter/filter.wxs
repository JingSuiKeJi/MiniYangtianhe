        }
    },
    getOrderStatus: function (status) {
        switch(status) {
            case 'SYSTEM_CANCEL':
                return '已取消';
            case 'CUSTOMER_CANCEL':
                return '已取消';
            case 'WAIT_BUYER_PAY':
                return '待付款';
            case 'WAIT_GROUP':
                return '等待成团';
            case 'WAIT_SELLER_SEND_GOODS':
                return '待发货';
            case 'WAIT_CHECK':
                return '待核销';
            case 'WAIT_DELIVERY':
                return '配送中';
            case 'WAIT_BUYER_CONFIRM_GOODS':
                return '待收货';
            case 'EXPIRED':
                return '已过期';
            case 'TRADE_BUYER_SIGNED':
                return '已签收';
            case 'TRADE_FINISH':
                return '已签收';
            default: 
               return '';
        }
    },
};
