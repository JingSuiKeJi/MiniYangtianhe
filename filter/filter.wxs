        var year = d.getFullYear();
        var month = d.getMonth() + 1;
        var day = d.getDate();
        var timeStr = d.toTimeString();
        var time = timeStr.substring(0, timeStr.indexOf('GMT'));
        time = time.substring(0, time.length - 4);
        var date = d.getDay();
