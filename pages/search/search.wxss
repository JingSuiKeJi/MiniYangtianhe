/* pages/search/search.wxss */
page {
    background-color: #ffffff;
}
.ui-searchBox {
    width: 100%;
    padding: 10rpx 0rpx 20rpx 40rpx;
    white-space: nowrap;
    position: relative;
}
.ui-searchBox .ui-searchItem_input {
    width: 584rpx;
    height: 56rpx;
    font-size:26rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    display: inline-block;
    color:#919191;
    line-height: 26rpx;
    padding-left: 70rpx;
    border-radius:28rpx;
    background-color:#FAFAFA;
}
.ui-searchBox .searchItem_icon {
    width: 32rpx;
    height: 32rpx;
    position: absolute;
    top: 23rpx;
    left: 55rpx;
}
.ui-searchBox .ui-searchItem_text {
    font-size:28rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:#666666;
    line-height:28rx;
    display: inline-block;
    line-height: 56rpx;
    vertical-align: top;
    text-align: center;
    margin-left: 30rpx;
}
.ui-hotSearchBox {
    width: 100%;
    padding-left: 50rpx;
    padding-right: 40rpx;
    box-sizing: border-box;
}
.ui-hotSearchBox .ui-hotItem_title {
    width: 100%;
    height: 70rpx;
    font-size:28rpx;
    font-family:PingFangSC-Semibold;
    font-weight:600;
    color:#333333;
    line-height:70rpx;
    display: inline-block;
    position: relative;
}
.ui-hotSearchBox .ui-hotItem_tag {
    margin-bottom: 20rpx;
}
.ui-hotSearchBox .ui-hotItem_tagBtn {
    height: 42rpx;
    display: inline-block;
    line-height: 42rpx;
    background-color: #77DCD7;
    font-size:22rpx;
    font-family:PingFang-SC-Medium;
    /* font-weight:400; */
    color:#fff;
    padding: 0 20rpx;
    margin-right: 20rpx;
    border-radius:8rpx;
}
.ui-hotSearchBox .ui-hotItem_hisTagBtn {
    height: 42rpx;
    display: inline-block;
    line-height: 42rpx;
    background-color: #F2F2F2;
    font-size:22rpx;
    font-family:PingFang-SC-Medium;
    /* font-weight:400; */
    color:#333333;
    padding: 0 20rpx;
    margin-right: 20rpx;
    border-radius:8rpx;
}
.ui-hotItem_delectIcon {
    width: 44rpx;
    height: 44rpx;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
}
