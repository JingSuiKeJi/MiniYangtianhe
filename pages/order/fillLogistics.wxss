@charset "UTF-8";
@import "/libs/common.wxss";

/**fillLogistics.wxss**/
page{
	background:rgba(245,245,245,1);
}

.ui-main {
    width: 100%;
}

.ui-refundInfo{
	display: flex;
	flex-direction: column;
	padding: 38rpx 40rpx 20rpx 40rpx;
	width: 100%;
	background: #FFFFFF;
}

.ui-refundInfo text:first-child{
	margin-bottom: 40rpx;
	height:30rpx;
	font-size:30rpx;
	font-family:PingFangSC;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:30rpx;
}

.ui-refundInfo text:not(:first-child){
	margin-bottom: 20rpx;
	font-size:26rpx;
	font-family:PingFangSC;
	font-weight:300;
	color:rgba(102,102,102,1);
	line-height:30rpx;
	word-break: keep-all;/*不允许字断开*/
	word-wrap: break-word;/*在长单词或URL地址内部进行换行*/
}

.ui-refundMoney{
	margin-top: 20rpx;
	padding-left: 40rpx;
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
	height: 172rpx;
	width: 100%;
	background: #FFFFFF;
}

.ui-refundMoney text{
	margin-bottom: 40rpx;
	height:26rpx;
	font-size:26rpx;
	font-family:PingFang-SC;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:26rpx;
}

.ui-logisticsInfo{
	display: flex;
	flex-direction: column;
	padding: 40rpx 0 0 40rpx;
	margin-top: 20rpx;
	height: 626rpx;
	width: 100%;
	background: #FFFFFF;
}

.ui-logisticsTitleText{
	margin-bottom: 40rpx;
	height:30rpx;
	font-size:30rpx;
	font-family:PingFangSC;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:30rpx;
}

.ui-expressCompany{
	margin-bottom: 40rpx;
	display: flex;
	align-items: center;
	height: 80rpx;
}

.ui-textCommon{
	height:26rpx;
	font-size:26rpx;
	font-family:PingFangSC;
	font-weight:300;
	color:rgba(102,102,102,1);
	line-height:26rpx;
}

.ui-selectExpressCompany{
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-left: 16rpx;
	width: 448rpx;
	height: 80rpx;
	border: 2rpx solid rgba(204,204,204,1);
	border-radius: 16rpx;
}

.ui-expressCompanyName{
	margin-left: 24rpx;
	font-weight:400;
	font-family:PingFangSC;
	line-height: 80rpx;
}

.ui-notSelectCompany{
	color:rgba(204,204,204,1);
	font-size:26rpx;
}

.ui-selectCompany{
	margin-bottom: 2rpx;
	color:rgba(51,51,51,1);
	font-size:32rpx;
}

.ui-pullDownIcon{
	margin-right: 28rpx;
	display: inline-block;
	height: 28rpx;
	width: 28rpx;
}

.ui-refundOrderNum{
	display: flex;
	align-items: center;
	height: 26rpx;
}

.ui-refundOrderNum text{
	font-size:26rpx;
	font-family:PingFangSC;
	font-weight:300;
	color:rgba(102,102,102,1);
	line-height:26rpx;
}

.ui-refundOrderNum input{
	margin-left: 20rpx;
	width: 450rpx;
	height:26rpx;
	font-size:26rpx;
	font-family:PingFangSC;
	color:rgba(102,102,102,1);
	font-weight:400;
	line-height:26rpx;
}

.btn-notSubmit{
	width: 100%;
	height:100rpx;
	background:rgba(216,216,216,1);
	box-shadow:0rpx -4rpx 24rpx 0rpx rgba(103,103,103,0.09);
	font-size:30rpx;
	font-family:PingFangSC;
	font-weight:600;
	color:rgba(255,255,255,1);
	line-height:100rpx;
	text-align: center;
}
	
.btn-canSubmit{
	width: 100%;
	height:100rpx;
	background:linear-gradient(137deg,rgba(1,206,165,1) 0%,rgba(94,221,218,1) 100%);
	box-shadow:0rpx -4rpx 24rpx 0rpx rgba(103,103,103,0.09);
	font-size:30rpx;
	font-family:PingFangSC;
	font-weight:600;
	color:rgba(255,255,255,1);
	line-height:100rpx;
	text-align: center;
}