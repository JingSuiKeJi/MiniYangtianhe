@charset "UTF-8";
@import "/libs/common.wxss";

/**applyRefund.wxss**/
page{
	background:rgba(245,245,245,1);
}

.ui-main {
    width: 100%;
}

.ui-newsInfoBox{
	width: 100%;
	background: #FFFFFF;
	padding-top: 40rpx;
}

.ui-newsInfoItem{
	position: relative;
	display: flex;
	flex-direction: row;
	padding-bottom: 40rpx;
}

.ui-newsImg{
	margin-left:40rpx;
}

.ui-newsImg image{
	width: 160rpx;
	height: 160rpx;
}

.ui-newsInfoDetail{
	width: 100%;
	margin-left: 20rpx;
	display: flex;
	flex-direction: column;
}

.ui-newsName{
	display: flex;
	justify-content: space-between;
	width: 100%;
}

.ui-newsName text:first-child{
	height:36rpx;
	font-size:26rpx;
	font-family:PingFangSC;
	font-weight:600;
	color:rgba(51,51,51,1);
	line-height:36rpx;
}

.ui-newsName text:last-child{
	height:20rpx;
	font-size:20rpx;
	font-family:PingFang-SC;
	font-weight:400;
	color:rgba(153,153,153,1);
	line-height:20rpx;
	margin-right: 100rpx;
}

.ui-newsWeight{
	margin-top: 48rpx;
	height:20rpx;
	font-size:20rpx;
	font-family:PingFang-SC;
	font-weight:400;
	color:rgba(153,153,153,1);
	line-height:20rpx;
}

.ui-newsMoney{
	height:26rpx;
	font-size:26rpx;
	font-family:PingFangSC-Medium;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:26rpx;
	margin-top:30rpx;
}

.ui-refundReasonBox{
	display: flex;
	flex-direction: column;
	padding-left: 40rpx;
	padding-right: 40rpx;
	margin-top: 20rpx;
	background: #FFFFFF;
	width: 100%;
}

.ui-cargoStatus{
	display: flex;
	align-items: center;
	margin: 40rpx 0 40rpx 0;
}

.ui-commonText{
	height:30rpx;
	font-size:30rpx;
	font-family:PingFang-SC;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:30rpx;
}

.btn-selectBox{
	display: flex;
	justify-content: space-between;
	margin-left: 76rpx;
	margin-top: 2rpx;
	width: 392rpx;
}

.btn-selectStatus{
	display: flex;
	align-items: center;
}

.btn-selectStatus text{
	margin-left: 16rpx;
	font-size:28rpx;
	font-family:PingFangSC;
	font-weight:400;
	color:rgba(0,0,0,0.65);
	line-height:44rpx;
}

.ui-selectIcon{
	width: 32rpx;
	height: 32rpx;
}


.ui-refundDetail{
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 40rpx;
	width: 100%;
}

.btn-refundDetailMore{
	display: flex;
	align-items: center;
}

.btn-refundDetailMore input{
	display: inline-block;
	margin-right: 16rpx;
	height:30rpx;
	font-size:26rpx;
	font-family:PingFangSC;
	color:rgba(51,51,51,1);
	font-weight:400;
	line-height:30rpx;
	text-align: end;
}

.btn-moreIcon{
	display: inline-block;
	width: 24rpx;
	height: 24rpx;
}

.ui-refundMoney{
	display: flex;
	align-items: center;
	margin-bottom: 40rpx;
}

.ui-refundMoney text:last-child{
	margin-left: 24rpx;
	height:26rpx;
	font-size:26rpx;
	font-family:PingFangSC;
	font-weight:400;
	color:rgba(237,61,59,1);
	line-height:26rpx;
}

.ui-refundExplain{
	display: flex;
	align-items: center;
	margin-bottom: 40rpx;
}

.ui-explainText{
	margin-left: 24rpx;
	width: 520rpx;
	height:30rpx;
	font-size:26rpx;
	font-family:PingFangSC;
	font-weight:400;
	color:rgba(153,153,153,1);
	line-height:30rpx;
}

.ui-uploadDocuments{
	width: 100%;
	margin-top: 20rpx;
	padding-top: 40rpx;
	background: #FFFFFF;
}

.ui-uploadText{
	margin-left: 40rpx;
	height:30rpx;
	font-size:30rpx;
	font-family:PingFang-SC;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:30rpx;
}

.ui-picture{
	padding-bottom: 40rpx;
	width: 100%;
	background: #FFFFFF;
	overflow:hidden;
}

.ui-flex{
	display: flex;
	flex-wrap: wrap;
}

.ui-flex view:nth-child(5){
	margin-top: 40rpx;
}

.ui-flex view:nth-child(6){
	margin-top: 40rpx;
}

/* 添加图片 */
.ui-addBox{
	margin: 50rpx 0 0 40rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	width:140rpx;
	height:140rpx;
	background:rgba(245,245,245,1);
	border-radius:8rpx;
}

.ui-addIcon{
	margin-top: 32rpx;
	width: 40rpx;
	height: 40rpx;
}

.ui-addBox text{
	height:18rpx;
	font-size:18rpx;
	font-family:PingFangSC;
	font-weight:400;
	color:rgba(153,153,153,1);
	line-height:18rpx;
}

.ui-addBox text:nth-child(2){
	margin-top: 12rpx;
}

.ui-addBox text:nth-child(3){
	margin-top: 8rpx;
}

/* 展示图片 */
.ui-showPicture{
	margin: 50rpx 0 0 40rpx;
	width: 140rpx;
	height: 140rpx;
	background:#FFFFFF;
}

.ui-showPictureItem{
	width: 140rpx;
	height: 140rpx;
}

.ui-deleteIcon{
	position: absolute;
	width: 40rpx;
	height: 40rpx;
	transform: translate(-18rpx,-10rpx);
	
}

.btn-submit{
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	height:100rpx;
	background:linear-gradient(137deg,rgba(1,206,165,1) 0%,rgba(94,221,218,1) 100%);
	box-shadow:0rpx -4rpx 24rpx 0rpx rgba(103,103,103,0.09);
	font-size:30rpx;
	font-family:PingFangSC;
	font-weight:600;
	color:rgba(255,255,255,1);
	line-height:100rpx;
	text-align: center;
}

/* 售后原因模态框 */
.modal-AfterMask {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background:rgba(0,0,0,1);
	opacity: 0.5;
	overflow: hidden;
	z-index: 9000;
	color: #fff;
}
.modal-AfterDialog {
	position: fixed;
	left: 0;
	bottom: 0;
	z-index: 9999;
	display: flex;
	flex-direction: column;
	width:100%;
	height:998rpx;
	background:rgba(255,255,255,1);
	border-radius:20px 20px 0px 0px;
	overflow: hidden;
}

.modal-header{
	display: flex;
	align-items: center;
	margin: 48rpx 0 66rpx 28rpx;
	width: 100%;
	height: 60rpx;
}

.btn-closeIcon{
	width: 40rpx;
	height: 40rpx;
}

.modal-header__reason{
	margin-left: 220rpx;
	font-size:34rpx;
	font-family:PingFangSC;
	font-weight:500;
	color:rgba(51,51,51,1);
}

.modal-explainText{
	margin-left: 40rpx;
	font-size:30rpx;
	font-family:PingFang-SC;
	font-weight:400;
	color:rgba(102,102,102,1);
	height: 110rpx;
	white-space: normal;
	
}

.modal-afterReason{
	display: flex;
	flex-direction: column;
	margin-left: 40rpx;
	width: 670rpx;
	height: 530rpx;
	display: flex;
	flex-direction: column;
}

.modal-reasonItems{
	display: flex;
	width: 100%;
	height: 110rpx;
	align-items: center;
}

.modal-reasonItems__text{
	max-width: 100%;
	width: 600rpx;
	font-size:30rpx;
	font-family:PingFangSC;
	font-weight:400;
	color:rgba(51,51,51,1);
	white-space: normal;

}

.modal-selectIcon{
	width: 40rpx;
	height: 40rpx;
	margin-left: auto;
}


.btn-selectFinish{
	display: flex;
	margin: 62rpx 0 0 40rpx;
	width: 670rpx;
	height: 100rpx;
	justify-content: center;
	align-items: center;
	position: relative;
}
.btn-selectFinish__img {
	width: 670rpx;
	height: 100rpx;
	position: absolute;
	top: 0;
	left: 0;
}
.btn-selectFinish__text {
    font-size:30rpx;
	font-family:PingFangSC;
	font-weight:600;
	color: #ffff;
    z-index: 99999;

}
/* 提交弹窗 */
/* 模态框 */
.modal-mask {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background:rgba(0,0,0,1);
	opacity: 0.5;
	overflow: hidden;
	z-index: 9000;
	color: #fff;
}
.modal-dialog {
	width:540rpx;
	height:208rpx;
	background:rgba(255,255,255,0.9);
	border-radius:16rpx;
	overflow: hidden;
	position: fixed;
	top: 50%;
	left: 0;
	z-index: 9999;
	margin: -180rpx 105rpx;
}
.modal-title {
	margin-top: 36rpx;
	margin-left:30rpx ;
	width:480rpx;
	height:48rpx;
	font-size:34rpx;
	font-family:PingFangSC-Semibold;
	font-weight:600;
	color:rgba(0,0,0,1);
	line-height:48rpx;
	text-align: center;
}

.modal-footer {
	display: flex;
	flex-direction: row;
	height: 86rpx;
	border-top: 1px solid #dedede;
	font-size: 34rpx;
	line-height: 86rpx;
	margin-top: 34rpx;
}
.btn-cancel {
	width: 50%;
	font-size:34rpx;
	font-family:PingFang-SC-Regular;
	font-weight:400;
	color:#007AFF;
	text-align: center;
	border-right: 1px solid #dedede;
}
.btn-confirm {
	width: 50%;
	font-size:34rpx;
	font-family:PingFangSC-Semibold;
	font-weight:600;
	color:#FD3D2F;
	text-align: center;
}