@charset "UTF-8";
@import "/libs/common.wxss";

/**postComment.wxss**/
page{
	background:rgba(245,245,245,1);
}

.ui-main {
    width: 100%;
}

/* 商品信息 */
.ui-commodityInfo{
	padding: 40rpx 0 12rpx 0;
	width:100%;
	background: #FFFFFF;
}

.ui-newsInfoBox{
	width: 100%;
}

.ui-newsInfoItem{
	display: flex;
	flex-direction: row;
	position: relative;
	margin-bottom: 40rpx;
}

.ui-newsImg{
	width: 160rpx;
	height: 160rpx;
	margin-left:40rpx;
}

.ui-newsImg image{
	width: 100%;
	height: 100%;
}

.ui-newsInfoDetail{
	margin-left: 20rpx;
	display: flex;
	flex-direction: column;
}

.ui-newsName{
	height:36rpx;
	font-size:26rpx;
	font-family:PingFangSC-Medium;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:36rpx;
}

.ui-newsWeight{
	height:22rpx;
	font-size:22rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(153,153,153,1);
	line-height:22rpx;
	margin-top: 48rpx;
}

.ui-newsMoney{
	height:26rpx;
	font-size:26rpx;
	font-family:PingFangSC-Medium;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:26rpx;
	margin-top:44rpx;
}

.ui-newsNum{
	position: absolute;
	right: 72rpx;
	top: 154rpx;
	height:22rpx;
	font-size:22rpx;
	font-family:PingFangSC-Medium;
	font-weight:500;
	color:rgba(153,153,153,1);
	line-height:22rpx;
}

/* 商品评价 */
.ui-comment{
	margin-top: 20rpx;
	width: 100%;
	background: #FFFFFF;
}

.ui-grade{
	display: flex;
	align-items: center;
	justify-content: space-between;
	width: 100%;
	height: 128rpx;
	border-bottom: 2rpx solid rgba(0,0,0,0.1);
}

.ui-grade view{
	padding: 0 40rpx 0 40rpx;
	display: flex;
	align-items: center;
	height: 100%;
}

.ui-grade view image{
	width: 48rpx;
	height: 48rpx;
}

.ui-grade view text{
	margin-left: 32rpx;
	height:36rpx;
	font-size:26rpx;
	font-family:PingFangSC;
	font-weight:400;
	color:rgba(102,102,102,1);
	line-height:36rpx;
}

.ui-write{
	padding-bottom: 40rpx;
	width: 100%;
	min-height: 230rpx;
	background: #FFFFFF;
}

.ui-write textarea{
	margin: 40rpx 0 0 40rpx;
	height:190rpx;
	font-size:30rpx;
	font-family:PingFang-SC;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:30rpx;
}

.ui-picture{
	margin-top: 20rpx;
	width: 100%;
	height: 456rpx;
	background: #FFFFFF;
	overflow:hidden;
}

.ui-flex{
	display: flex;
	flex-wrap: wrap;
}

/* 添加图片 */
.ui-addBox{
	margin: 50rpx 0 0 40rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	width:140rpx;
	height:140rpx;
	background:rgba(245,245,245,1);
	border-radius:8rpx;
}

.ui-addIcon{
	margin-top: 32rpx;
	width: 40rpx;
	height: 40rpx;
	background-image:url('http://www.gzlingren.com:8098/yangtianhe/my_icAddToOut.png');
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
}

.ui-addBox text{
	height:18rpx;
	font-size:18rpx;
	font-family:PingFangSC;
	font-weight:400;
	color:rgba(153,153,153,1);
	line-height:18rpx;
}

.ui-addBox text:nth-child(2){
	margin-top: 12rpx;
}

.ui-addBox text:nth-child(3){
	margin-top: 8rpx;
}

/* 展示图片 */
.ui-showPicture{
	margin: 50rpx 0 0 40rpx;
	width: 140rpx;
	height: 140rpx;
	background:#FFFFFF;
}

.ui-showPicture image{
	width: 100%;
	height: 100%;
}

.ui-deleteIcon{
	position: absolute;
	width: 40rpx;
	height: 40rpx;
	transform: translate(-18rpx,-10rpx);
	background-image:url('http://www.gzlingren.com:8098/yangtianhe/my_ic_off_red.png');
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
}

/* 发布按钮 */
.btn-postComment{
	width:100%;
	height:100rpx;
	box-shadow:0rpx -4rpx 24rpx 0rpx rgba(103,103,103,0.09);
	font-size:30rpx;
	font-family:PingFangSC;
	font-weight:600;
	color:rgba(255,255,255,1);
	line-height:100rpx;
	text-align: center;
}

.grey{
	background:rgba(216,216,216,1);
}

.green{
	background:linear-gradient(137deg,rgba(1,206,165,1) 0%,rgba(94,221,218,1) 100%);
}