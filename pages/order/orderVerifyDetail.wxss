@charset "UTF-8";
@import "/libs/common.wxss";

/**orderVerifyDetail.wxss**/
page{
	background:rgba(245,245,245,1);
}

.ui-main {
    width: 100%;
}

.ui-storeAddressBox{
	width: 100%;
	background: #FFFFFF;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.ui-store{
	display: flex;
	flex-direction: column;
	margin: 26rpx 0 0 40rpx;
}

.ui-store text:first-child{
	height:30rpx;
	font-size:30rpx;
	font-family:PingFangSC-Medium;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:30rpx;
}

.ui-store text:last-child{
	width:550rpx;
	font-size:26rpx;
	font-family:PingFang-SC-Medium;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:40rpx;
	margin-top:12rpx;
	margin-bottom: 28rpx;
	word-break: keep-all;/*不允许字断开*/
	word-wrap: break-word;/*在长单词或URL地址内部进行换行*/
}

.ui-verify{
	width:100rpx;
	height:44rpx;
	background:linear-gradient(137deg,rgba(1,206,165,1) 0%,rgba(94,221,218,1) 100%);
	border-radius:8rpx;
	margin-right: 40rpx;
	font-size:22rpx;
	font-family:PingFangSC-Medium;
	font-weight:500;
	color:rgba(255,255,255,1);
	line-height:44rpx;
	text-align: center;
}

.ui-red{
	background: #FF5F55 !important;
}

.ui-grey{
	background: #CCCCCC !important;
}

.ui-consigneeAddressBox{
	width: 100%;
	background: #FFFFFF;
	display: flex;
	align-items: center;
	margin-top: 20rpx;
}

.ui-landmarkIcon{
	width: 34rpx;
	height: 40rpx;
	background-image:url('http://www.gzlingren.com:8098/yangtianhe/my_landmarkIcon.png');
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
	margin-left: 40rpx;
}

.ui-consignee{
	display: flex;
	flex-direction: column;
	margin:28rpx 0 0 48rpx;
}

.ui-consigneeinfo text:first-child{
