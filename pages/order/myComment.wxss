@charset "UTF-8";
@import "/libs/common.wxss";

/**myComment.wxss**/
page{
	background:rgba(245,245,245,1);
}

.ui-main {
    width: 100%;
}

.ui-commentItems{
	display: flex;
	flex-direction: column;
	margin-bottom: 20rpx;
	padding: 20rpx 38rpx 40rpx 40rpx;
	width: 100%;
	background: #FFFFFF;
}

.ui-commentItems:last-child{
	margin-bottom: 56rpx;
}

.ui-userInfo{
	display: flex;
	justify-content: center;
	align-items: center;
	width: 100%;
}

.ui-avatar{
	width: 64rpx;
	height: 64rpx;
}

.ui-avatar image{
	width: 100%;
	height: 100%;
}

.ui-userInfo text:nth-child(2){
	margin: 8rpx 0 0 24rpx;
	height:30rpx;
	font-size:30rpx;
	font-family:PingFang-SC;
	font-weight:400;
	color:rgba(51,51,51,1);
	line-height:30rpx;
	margin-left: 24rpx;
}

.ui-userInfo text:nth-child(3){
	/* margin: 8rpx 0 0 288rpx; */
	height:26rpx;
	font-size:26rpx;
	font-family:PingFangSC;
	font-weight:400;
	color:rgba(199,199,199,1);
	line-height:26rpx;
	margin-left: auto;
	/* margin-top: 8rpx; */
}

.ui-commentText{
	margin-top: 14rpx;
	width:670rpx;
	font-size:30rpx;
	font-family:PingFangSC;
	font-weight:400;
	color:rgba(51,51,51,1);
	line-height:50rpx;
}

.ui-commentImgBox{
	width: 100%;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
}
.ui-itemImg{
	margin-top: 20rpx;
	margin-left: 36rpx;
	width: 200rpx;
	height: 200rpx;
}

.ui-itemImg:nth-child(1){
	margin-left: 0;
}

.ui-itemImg:nth-child(4){
	margin-left: 0;
}

.ui-commentImgBox image{
	width: 100%;
	height: 100%;
}

.ui-goodsInfo{
	display: flex;
	margin-top: 42rpx;
}

.ui-goodsImg{
	width: 160rpx;
	height: 160rpx;
}

.ui-goodsImg image{
	width: 100%;
	height: 100%;
}

.ui-goodsDetail{
	display: flex;
	flex-direction: column;
	margin-left: 20rpx;
}

.ui-goodsName{
	height:36rpx;
	font-size:26rpx;
	font-family:PingFangSC;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:36rpx;
}

.ui-goodsAmount{
	margin-top: 48rpx;
	height:22rpx;
	font-size:22rpx;
	font-family:PingFangSC;
	font-weight:400;
	color:rgba(153,153,153,1);
	line-height:22rpx;
}

.ui-priceComment{
	margin-top: 28rpx;
}

.ui-priceComment text:nth-child(1){
	height:26rpx;
	font-size:26rpx;
	font-family:PingFangSC;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:26rpx;
}

.ui-priceComment text:nth-child(2){
	margin-left: 20rpx;
	height:22rpx;
	font-size:22rpx;
	font-family:PingFangSC;
	font-weight:400;
	color:rgba(237,61,59,1);
	line-height:22rpx;
}