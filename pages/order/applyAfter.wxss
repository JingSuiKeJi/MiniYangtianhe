@charset "UTF-8";
@import "/libs/common.wxss";

/**applyAfter.wxss**/
page{
	/* background:rgba(245,245,245,1); */
	background: #FFFFFF;
}

.ui-main {
    width: 100%;
}

.ui-newsInfoBox{
	width: 100%;
	background: #FFFFFF;
}

.ui-newsInfoItem{
	display: flex;
	flex-direction: row;
	align-items: center;
	padding-top: 40rpx;
	padding-bottom: 40rpx;
	border-bottom: 2rpx solid rgba(241,241,241,1);
}

.ui-selectCommon{
	margin-left: 30rpx;
	width: 64rpx;
	height: 40rpx;
	background-repeat: no-repeat;
	background-position: center center;
	background-size:cover;
}

.ui-selectIcon{
	background-image:url('http://www.gzlingren.com:8098/yangtianhe/cart_selestIcon.png');
}

.ui-notSelectIcon{
	background-image:url('http://www.gzlingren.com:8098/yangtianhe/my_unCheck.png');
}

.ui-newsImg{
	margin-left:30rpx;
}

.ui-newsImg image{
	width: 160rpx;
	height: 160rpx;
}

.ui-newsInfoDetail{
	width: 100%;
	margin-left: 20rpx;
	display: flex;
	flex-direction: column;
}

.ui-newsName{
	display: flex;
	justify-content: space-between;
	width: 100%;
}

.ui-newsName text:first-child{
	height:36rpx;
	font-size:26rpx;
	font-family:PingFangSC;
	font-weight:600;
	color:rgba(51,51,51,1);
	line-height:36rpx;
}

.ui-newsName text:last-child{
	height:20rpx;
	font-size:20rpx;
	font-family:PingFang-SC;
	font-weight:400;
	color:rgba(153,153,153,1);
	line-height:20rpx;
	margin-right: 40rpx;
}

.ui-newsWeight{
	margin-top: 48rpx;
	height:20rpx;
	font-size:20rpx;
	font-family:PingFang-SC;
	font-weight:400;
	color:rgba(153,153,153,1);
	line-height:20rpx;
}

.ui-newsMoney{
	height:26rpx;
	font-size:26rpx;
	font-family:PingFangSC-Medium;
	font-weight:500;
	color:rgba(51,51,51,1);
	line-height:26rpx;
	margin-top:30rpx;
}

.ui-cutOff{
	width: 100%;
	height: 20rpx;
	background: rgba(245,245,245,1);
}

.ui-refundHandleBox{
	display: flex;
	flex-direction: column;
	width: 100%;
	height: 100%;
	background:#FFFFFF;
}

.ui-itemCommon{
	position: relative;
	display: flex;
	align-items: center;
	width: 100%;
	height: 132rpx;
	border-bottom: 2rpx solid rgba(0,0,0,0.1);
}

.ui-iconCommon{
	margin-left: 30rpx;
	width: 40rpx;
	height: 38rpx;
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
}

.ui-refundIcon{
	background-image:url('http://www.gzlingren.com:8098/yangtianhe/my_refund.png');
}

.ui-exchangeIcon{
	background-image:url('http://www.gzlingren.com:8098/yangtianhe/my_exchangeGoods.png');
}

.ui-returnIcon{
	background-image:url('http://www.gzlingren.com:8098/yangtianhe/my_salesReturn.png');
}

.ui-reasonText{
	margin-left: 30rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	height: 58rpx;
}

.ui-reasonText text:first-child{
	height:26rpx;
	font-size:26rpx;
	font-family:PingFangSC;
	font-weight:400;
	color:rgba(0,0,0,1);
	line-height:26rpx;
}

.ui-reasonText text:last-child{
	height:20rpx;
	font-size:20rpx;
	font-family:PingFangSC;
	font-weight:400;
	color:rgba(153,153,153,1);
	line-height:20rpx;
}

.ui-skipIcon{
	position: absolute;
	right: 50rpx;
	width: 16rpx;
	height: 26rpx;
	background-image:url('http://www.gzlingren.com:8098/yangtianhe/my_rightArrow.png');
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
}

