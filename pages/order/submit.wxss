    margin-top: 30rpx;
}
.ui-orderItem__post {
    margin-top: 20rpx;
}
.ui-orderItem__post .ui-postItem__title {
    font-size:30rpx;
    font-family:PingFang-SC;
    font-weight:500;
    color:#333333;
    line-height:30rpx;
}
.ui-orderItem__post .ui-postItem__input {
    display: inline-block;
    width: 75%;
    height: 100%; 
    line-height:26rpx;
    margin-top: 10rpx;
    padding-left: 20rpx;
    font-size:26rpx;
    font-family:PingFang-SC;
    font-weight:500;
    color:#999999;
    vertical-align: top;
}

.ui-postItem__constItem {
    float: right;
}
.ui-postItem__constItem .ui-postItem__cost {
    display: inline-block;
    width:68rpx;
    height:40rpx;
    line-height: 40rpx;
    margin-right: 30rpx;
    font-size:22rpx;
    font-family:PingFangSC;
    font-weight:500;
    color:#fff;
    text-align: center;
    background-color:#FB6248;
    border-radius:4rpx;
}
.ui-postItem__constItem .ui-postItem__price {
    font-size:28rpx;
    font-family:PingFang-SC;
    font-weight:400;
    color:#333333;
    line-height:28rpx;
    
}
.ui-orderItem__total {
    width: 100%;
    margin-top: 30rpx;
}
.ui-totalItem {
    text-align: right;
}
.ui-totalItem__num {
    font-size:26rpx;
    font-family:PingFang-SC;
    font-weight:500;
    color:#999999;
    line-height:26rpx;
    margin-right: 20rpx;
}
.ui-totalItem__text {
    font-size:28rpx;
    font-family:PingFang-SC;
    font-weight:500;
    color:#666666;
    line-height:28rpx;
}
.ui-totalItem__price {
    font-size:28rpx;
    font-family:PingFangSC;
    font-weight:600;
    color:#ED3D3B;
    line-height:28rpx;
}
