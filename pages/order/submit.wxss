    font-weight:500;
    color:#F6959C;
    line-height:24rpx;
    margin: 20rpx ;
    display: inline-block;
    vertical-align: top;
}
.headerItem_rightIcon {
    width: 12rpx;
    height: 18rpx;
    display: inline-block;
    vertical-align: top;
    margin-top: 27rpx;
}
.ui-addressBox {
    display: flex;
    align-items: center;
    width: 702rpx;
    min-height: 130rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    padding-bottom: 10rpx;
    padding-right: 20rpx;
    background-color: #fff;
    border-radius:12rpx;
    position: relative;
    
}
.ui-addressItem__addressIcon {
    width: 34rpx;
    height: 42rpx;
    margin-left: 30rpx;
}
.ui-addressItem__detail {
     width: 77%;
     margin-left: 30rpx;
}
.ui-detailItem__info {
      width: 100%;
}
.ui-detailItem__info .ui-infoItem__name {
    font-size:30rpx;
    font-family:PingFangSC;
    font-weight:500;
    color:#333333;
    line-height:30rpx;
}
.ui-detailItem__info .ui-infoItem__phone {
    margin-left: 15rpx;
    font-size:26rpx;
    font-family:PingFang-SC;
    font-weight:400;
    color:#666666;
    line-height:26rpx;
}
.ui-detailItem__address {
    width: 100%;
    font-size:26rpx;
    font-family:PingFang-SC;
    font-weight:500;
    color:#333333;
    line-height:35rpx;
    margin-top: 10rpx;
}
.ui-addressItem__text {
	margin-left:30rpx;
    width: 70%;
    font-size:30rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:#333333;
    line-height:37rpx;

}
.ui-addressItem__moreIcon {
    width: 24rpx;
    height: 24rpx; 
    margin-left: auto;
}
.postBox {
    width: 702rpx;
    height: 180rpx;
    margin: 0 auto;
    background-color: #fff;
    border-radius:12rpx;
    white-space: nowrap;
    line-height: 180rpx;
}
.ui-postItem__text {
    margin-left: 20rpx;
    font-size:30rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:#333333;
    line-height:30rpx;
    display: inline-block;
}
.ui-postItem__postTime {
    width: 500rpx;
    margin-top: 15rpx;
    display: inline-block;
    vertical-align: top;

}
.ui-postItem {
    display: inline-block;
    width: 152rpx;
    height: 112rpx;
    margin-left: 30rpx;
    margin-top: 37rpx;
    text-align: center;
    border: 1rpx solid #CCCCCC;
    vertical-align: top;
    color:#999999;
}
.ui-postItem .ui-pickerBox {
    width: 100%;
    height: 100%;

}
.isSelectItem {
    border-color: #ED3D3B;
    color: #ED3D3B;
}

.ui-postItem > view:nth-child(1), .ui-pickerBox .ui-pickerItem__text{
    font-size:26rpx;
    font-family:PingFangSC;
    font-weight:400;
    line-height:26rpx;
    margin: 30rpx auto 15rpx auto;
}
.ui-postItem > view:nth-child(2),.ui-pickerBox .ui-pickerItem__time {
    font-size:22rpx;
    font-family:PingFangSC;
    font-weight:400;
    line-height:22rpx;  
}
.ui-storeAddressBox {
    display: flex;
    align-items: center;
    /* width: 702rpx; */
    width: 702rpx;
    margin: 20rpx auto;
    background-color: #fff;
    border-radius:12rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    padding-right: 20rpx;

}
.ui-storeAddress__name,.ui-storeAddress__addre  {
    margin-left: 20rpx;
    font-size:30rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:#333333;
    line-height:30rpx;
}
.ui-storeAddress__name{
   width: 150rpx;
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
}
.ui-storeAddress__addre {
    width: 330rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.ui-storeAddress__distanceBox{
    display: flex;
    width: 150rpx;
    align-items: center;
    justify-content: center;
    margin-left: auto;
}

.ui-storeAddress__distance {
    width: 140rpx;
    /* margin-left: 15rpx; */
    font-size:20rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:#999999;
    line-height:20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.ui-storeAddress__rightItem {
    width: 24rpx;
    height: 24rpx;
    margin-left: 10rpx;
}
.ui-orderBox {
    width: 702rpx;
    margin: 0 auto;
    background-color: #fff;
    border-radius:12rpx;
    padding: 30rpx;
    box-sizing: border-box;
}
.ui-orderItem {
    width: 100%;
    white-space: nowrap;
}
.ui-orderItem__imgBox  {
    display: inline-block;

}
.ui-orderItem__imgBox .ui-imgItem__icon {
    width: 160rpx;
    height: 160rpx;
}
.ui-orderItem__info {
    display: inline-block;
    width: 70%;
    vertical-align: top;
    margin-top: 10rpx;
    margin-left: 20rpx;
}
.ui-orderItem__info .ui-infoItem__title {
    width: 100%;
    font-size:26rpx;
    font-family:PingFangSC;
    font-weight:500;
    color:#333333;
    line-height:36rpx;
    white-space: normal;
}
.ui-orderItem__info .ui-infoItem__scale {
    width: 100%;
    font-size:22rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:#999999;
    line-height:22rpx;
    margin: 38rpx auto 18rpx auto;
    white-space: normal;
}
.ui-infoItem__price {
    width: 100%;
}
.ui-infoItem__price .ui-priceItem__price {
    font-size:26rpx;
    font-family:PingFangSC;
    font-weight:500;
    color:#333333;
    line-height:26rpx;
}
.ui-infoItem__price .ui-priceItem__num {
    font-size:22rpx;
    font-family:PingFangSC;
    font-weight:600;
    color:#999999;
    line-height:22rpx;
