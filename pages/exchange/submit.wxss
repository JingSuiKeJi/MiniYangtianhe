page {
    width: 100%;
    height: 100%;
    background-color: #F5F5F5;
}
.ui-main {
    width: 100%;
    /* height: 100%; */
    padding-bottom: 300rpx;
} 
.ui-addressBox {
    display: flex;
    align-items: center;
    width: 702rpx;
    min-height: 130rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    padding-bottom: 10rpx;
    padding-right: 20rpx;
    background-color: #fff;
    border-radius:12rpx;
    position: relative;
    
} 
.ui-addressItem__addressIcon {
    width: 34rpx;
    height: 42rpx;
    margin-left: 30rpx;
}
.ui-addressItem__detail {
    width: 77%;
    margin-left: 30rpx;
} 
.ui-detailItem__info {
    width: 100%;
}
 .ui-infoItem__name {
  font-size:30rpx;
  font-family:PingFangSC;
  font-weight:500;
  color:#333333;
  line-height:30rpx;
}
.ui-infoItem__phone {
  margin-left: 15rpx;
  font-size:26rpx;
  font-family:PingFang-SC;
  font-weight:400;
  color:#666666;
  line-height:26rpx;
}
.ui-detailItem__address {
    width: 100%;
    font-size:26rpx;
    font-family:PingFang-SC;
    font-weight:500;
    color:#333333;
    line-height:35rpx;
    margin-top: 10rpx;
}
.ui-addressItem__text {
	margin-left:30rpx;
    width: 70%;
    font-size:30rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:#333333;
    line-height:37rpx;

}
.ui-addressItem__moreIcon {
    width: 24rpx;
    height: 24rpx; 
    margin-left: auto;
}
.ui-orderBox {
    width: 702rpx;
    margin: 0 auto;
    background-color: #fff;
    border-radius:12rpx;
    padding: 32rpx 32rpx 36rpx 32rpx;
    box-sizing: border-box;
}
.ui-orderItem {
    width: 100%;
    white-space: nowrap;
}
.ui-orderItem__imgBox  {
    display: inline-block;

}
.ui-imgItem__icon {
    width: 160rpx;
    height: 160rpx;
}
.ui-orderItem__info {
    display: inline-block;
    width: 478rpx;
    vertical-align: top;
    margin-top: 10rpx;
    padding-left: 20rpx;
}
.ui-infoItem__title {
    width: 100%;
    font-size:26rpx;
    font-family:PingFangSC;
    font-weight:500;
    color:#333333;
    line-height:36rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.ui-infoItem__scale {
    width: 100%;
    font-size:22rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:#999999;
    line-height:22rpx;
    margin: 38rpx auto 18rpx auto;
    white-space: normal;
}
.ui-orderItem__post {
    margin-top: 30rpx;
    display: flex;
    align-items: center;
}
.ui-postItem__title {
    font-size:30rpx;
    font-family:PingFang-SC;
    font-weight:500;
    color:#333333;
    line-height:30rpx;
}
.ui-postItem__input {
    display: inline-block;
    width: 75%;
    height: 100%; 
    line-height:26rpx;
    /* margin-top: 10rpx; */
    padding-left: 20rpx;
    font-size:26rpx;
    font-family:PingFang-SC;
    font-weight:500;
    color:#999999;
    vertical-align: top;
}
.ui-postItem__text {
    margin-left: 20rpx;
    font-size:26rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:#999999;
    line-height:26rpx;
}
.ui-payBox {
    width: 100%;
    height: 104rpx;
    line-height: 104rpx;
    padding-right: 30rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    text-align: right;
    box-sizing: border-box;
}
.ui-payItem__num {
    margin-right: 20rpx;
    font-size:26rpx;
    font-family:PingFang-SC;
    font-weight:500;
    color:#999999;
    line-height:26rpx;
}
.ui-payItem__text {
    font-size:28rpx;
    font-family:PingFang-SC;
    font-weight:500;
    color:#666666;
    margin-right: 10rpx;
    line-height:28rpx;
}
.ui-payItem__price {
    margin-right: 20rpx;
    font-size:36rpx;
    font-family:PingFangSC;
    font-weight:600;
    color:#ED3D3B;
    line-height:36rpx;
}
.ui-payItem__orderText {
    display: inline-block;
    width: 192rpx;
    height: 80rpx;
    line-height:80rpx;
    font-size:30rpx;
    font-family:PingFangSC;
    font-weight:600;
    color:#fff;
    background-image: url(https://app.yth-yx.com/mini/cart_greenBtn.png);
    background-size: 192rpx 80rpx;
    text-align: center;
}
.ui-infoItem__num{
    height:22rpx;
    font-size:22rpx;
    font-family:PingFangSC-Semibold,PingFang SC;
    font-weight:600;
    color:rgba(153,153,153,1);
    line-height:22rpx;
    text-align: right;
}
.ui-postItem__deliveryFee{
    margin-left: auto;
}
.ui-deliveryFee{
    font-size:28rpx;
    font-family:PingFang-SC-Medium,PingFang-SC;
    font-weight:500;
    color:#666666;
    line-height:28rpx;
    text-align: right;
    margin-top: 60rpx;

}
.ui-deliveryFee>text {
    color:#ED3D3B;
}




