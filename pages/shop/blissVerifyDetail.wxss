.ui-pullDown{
	width: 64rpx;
	height: 64rpx;
	position: absolute;
	right: 38rpx;
	transform: translateY(-50%);
}
/* 福气核销列表 */
.ui-history{
	width:100%;
	height:300rpx;
	background:rgba(255,255,255,1);
	margin-top: 40rpx;
}

.ui-historyStatus{
	height:86rpx;
	background:rgba(255,255,255,1);
	border-bottom: rgba(0,0,0,0.1) solid 2rpx;
	display: flex;
	justify-content: space-between;
}

.ui-historyStatus text{
	position: relative;
	font-size:26rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(153,153,153,1);
	line-height:86rpx;
}

.ui-historyStatus text:first-child{
	margin-left: 60rpx;
}

.ui-historyStatus text:last-child{
	margin-right: 60rpx;
}

.ui-historyStatus .ui-historyStatusTextHover{
	color:rgba(29,196,188,1);
}

.ui-historyStatus .ui-historyStatusTextHover:after{
	position: absolute;
	content: "";
	width: 40rpx;
	height: 6rpx;
	background:#1DC4BC;
	border-radius:3rpx;
	top: 100%;
	left: 50%;
	transform: translate(-50%,-100%);
}

.ui-historyDateDetail{
	position: absolute;
	height:26rpx;
	font-size:26rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(102,102,102,1);
	line-height:26rpx;
	margin: 28rpx 0 32rpx 60rpx;
}

.ui-historyOperation{
	background: #FFFFFF;
	display: flex;
	margin: 86rpx 44rpx 40rpx 60rpx;
}

.ui-historyOperationItem{
	display: flex;
	flex-direction: column;
}

.ui-historyOperationItem:nth-child(2){
	margin-left: 60rpx;
}

.ui-historyOperationItem .ui-itemTitle{
	height:22rpx;
	font-size:22rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(102,102,102,1);
	line-height:22rpx;
}

.ui-historyOperationItem .ui-numCommon{
	margin-top: 36rpx;
	display: flex;
}

.ui-historyOperationItem .ui-numCommon .ui-moneySymbol{
	margin-top: 2rpx;
	margin-right: 4rpx;
	height:22rpx;
	font-size:22rpx;
	font-family:PingFangSC-Medium;
	font-weight:500;
	color:rgba(32,202,180,1);
	line-height:22rpx;
}

.ui-historyOperationItem .ui-numCommon .ui-moneyText{
	height:30rpx;
	font-size:30rpx;
	font-family:PingFangSC-Medium;
	font-weight:500;
	color:rgba(32,202,180,1);
	line-height:30rpx;
}

.ui-detailBox{
	display: flex;
	flex-direction: column;
	width: 100%;
}

.ui-detailBox:last-child{
	margin-bottom: 40rpx;
}

.ui-data{
	height: 86rpx;
	width: 100%;
}

.ui-data text{
	display: block;
	margin: 40rpx 0 0 40rpx;
	height:26rpx;
	font-size:26rpx;
	font-family:PingFangSC;
	font-weight:400;
	color:rgba(153,153,153,1);
	line-height:26rpx;
}

.ui-detailItems{
	position: relative;
	display: flex;
	align-items: center;
	width:100%;
	height:112rpx;
	background:rgba(255,255,255,1);
	border-bottom: 2rpx solid rgba(0,0,0,0.1);
}

.ui-detailItems text{
	height:28rpx;
	font-size:28rpx;
	font-family:PingFangSC;
	font-weight:400;
	color:rgba(102,102,102,1);
	line-height:28rpx;
	letter-spacing:2rpx;
}

.ui-detailItems text:nth-child(1){
	position: absolute;
	left: 40rpx;
}

.ui-detailItems text:nth-child(2){
	position: absolute;
	left: 298rpx;
}

.ui-detailItems text:nth-child(3){
	position: absolute;
	right: 40rpx;
}