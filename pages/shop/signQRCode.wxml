<wxs module="filter" src="../../filter/filter.wxs"></wxs>
<!--storeQRCode.wxml-->
<view class="container">
	<view class="ui-main">
		<view class="ui-qrBox">
			<view class="ui-nameBox">{{userInfo.store.title}}</view>
			<view class="ui-addressBox">{{userInfo.store.address}}</view>
			<view class="ui-storeQR">
				<image src="{{url}}" class="ui-codeImg" mode="aspectFit"/>
			</view>
		</view>
		<view class="ui-refBtn">
			<!-- <image src="{{filter.getLocalPhoto('sgin/icon_refresh.png')}}" class="ui-iconRefresh"/> -->
			<text>刷新二维码</text>
		</view>
		<view class="ui-recordBox">
			<view class="ui-recordBox__count">
				<view class="ui-recordBox__title">今日签到人数</view>
				<view class="ui-recordBox__num"> <text>56</text> </view>
			</view>
			<block wx:for="{{4}}" wx:key="{{item}}">
				<view class="ui-recordBox__friend">
					<view class="ui-friendBox">
						<view class="ui-friend__info">
							<view class="ui-friend__avater">
							<!-- <image src=""/> -->
							</view>
							<text class="ui-friend__name">命运的杰克</text>
						</view>
						<view class="ui-friend__time">2019-11-11 15:46:49</view>
					</view>
					<view class="ui-friend__count">
						<view class="ui-friend__num">20</view>
						<text>累计签到次数</text>
					</view>
				</view>
			</block>
			<view class="ui-recordBox__drop">
				下拉滑动显示更多
			</view>
		</view>
	</view>
</view>
