.ui-addressBox text:first-child{
	font-size:34rpx;
	font-family:PingFangSC-Medium;
	font-weight:500;
	color:rgba(61,61,61,1);
	margin: 32rpx 0 0 32rpx;
}

.ui-addressBox text:last-child{
	font-size:26rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(61,61,61,1);
	line-height:35rpx;
	margin: 20rpx 32rpx 22rpx 32rpx;
	word-break: keep-all;/*不允许字断开*/
	word-wrap: break-word;/*在长单词或URL地址内部进行换行*/
}

.ui-qrInfo{
	width: 100%;
	height: 622rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.ui-qrInfo image{
	width:520rpx;
	height:470rpx;
}

.btn-savePoster{
	width:110rpx;
	height:110rpx;
	background:rgba(255,255,255,1);
	border-radius: 110rpx;
	margin: 36rpx 0 0 318rpx;
}

.ui-savePosterText{
	/* position: relative;
	top: 20rpx;
	left: 320rpx; */
	height:28rpx;
	font-size:28rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(102,102,102,1);
	line-height:28rpx;
	margin-top: 20rpx;
	text-align: center;

}

.btn-share{
	margin: 36rpx 0 0 120rpx;
	width:512rpx;
	height:80rpx;
	background:linear-gradient(137deg,rgba(1,206,165,1) 0%,rgba(94,221,218,1) 100%);
	border-radius:40rpx;
	font-size:28rpx;
	font-family:PingFangSC-Semibold;
	font-weight:600;
	color:rgba(255,255,255,1);
	line-height:80rpx;
	text-align: center;
}

.ui-share__canvas {
	width:670rpx;
	height:756rpx;
	background:rgba(255,255,255,1);
	box-shadow:0rpx 2rpx 8rpx 0rpx rgba(0,0,0,0.1);
	border-radius:16rpx;
}
.ui-share__image {
	width:670rpx;
	height:756rpx;
	border-radius:16rpx;
	position: absolute;
	left: 0;
	top: 0;
}