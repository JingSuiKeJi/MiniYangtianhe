    border-radius:16rpx;
}
.ui-contentItem__avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-left: 40rpx;
    margin-right: 32rpx;
}
.ui-contentItem__title {
    width:200rpx;
    height:92rpx;
    font-size:24rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(61,61,61,1);
    line-height:46rpx;
}
.ui-contentItem__title > text {
    color: #EA6363
}
.ui-main__text {
    margin-top: 24rpx;
    font-size:24rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:24rpx;
}
.ui-main__btn {
    width:330rpx;
    height:74rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 60rpx;
    font-size:32rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:32rpx;
    background:linear-gradient(178deg,rgba(255,97,71,1) 0%,rgba(255,167,114,1) 100%);
    border-radius:37rpx;
}
.ui-contentItem__code {
    width: 156rpx;
    height: 156rpx;
    margin-left: auto;
    margin-right: 40rpx;
}
/* 模态框 */
.modal-mask {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background:rgba(0,0,0,1);
	opacity: 0.5;
	overflow: hidden;
	z-index: 100;
	color: #fff;
}

.modal-dialog {
	width:100%;
	overflow: hidden;
	position: fixed;
	bottom: 0;
	left: 0;
	z-index: 999999;
	height:230rpx;
	background:rgba(255,255,255,1);
	border-radius:20rpx 20rpx 0rpx 0rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.btn-common{
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
}

