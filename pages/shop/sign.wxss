@charset "UTF-8";
@import "/libs/common.wxss";
page {
    background-color: #F5F5F5;
}
.ui-main {
    display: flex;
    align-items: center;
    flex-direction: column;
}
.ui-storeBox {
    display: flex;
    height: 636rpx;
    width: 100%;
    background-color: #FFFFFF;
    align-items: center;
    flex-direction: column;
}
.ui-storeItem__gps {
    display: flex;
    height: 120rpx;
    width: 100%;
    align-items: center;

}
.ui-gpsItem__btn {
    display: flex;
    width:352rpx;
    height:48rpx;
    background:rgba(9,221,214,1);
    border-radius:29rpx;
    margin-left: 52rpx;
    align-items: center;

}
.ui-gpsItem__addressItem {
    width: 32rpx;
    height: 32rpx;
    margin-left: 16rpx;
    margin-right: 8rpx;
}
.ui-gpsItem__name {
    width:280rpx;
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:#FFFFFF;
    line-height:28rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.ui-gpsItem__name > text{
    width: 150rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    display: inline-block;
}
.ui-gpsitem__status {
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:#999999;
    line-height:28rpx;
    margin-left: auto;
    margin-right: 40rpx;
}
.ui-map {
    width: 710rpx;
    height: 320rpx;
}
.ui-addressBox{
    width: 100%;
    height: 196rpx;
    display: flex;
    justify-content: center;
    flex-direction: column;
    
}
.ui-addressitem {
    width: 100%;
    padding-left: 40rpx;
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:#333333;
    line-height:28rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.ui-addressitem:nth-child(2)  {
   margin-top: 20rpx ;
   margin-bottom: 20rpx;
}
.ui-signBox{
    display: flex;
    margin-top: 40rpx;
    width:710rpx;
    height:522rpx;
    background:rgba(255,255,255,1);
    border-radius:16rpx;
    align-items: center;
    flex-direction: column;
}
.ui-signitem__fuqi {
    display: flex;
    width: 710rpx;
    height: 124rpx;
    align-items: center;
    background-color: turquoise;
}
.ui-fuqi__num {
    font-size:24rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:#FFFFFF;
    line-height:24rpx;
    margin-left: 52rpx;
}
.ui-fuqi__num > text {
    font-size:40rpx;
    font-weight:600;
}
.ui-fuqi__signDay {
    margin-left: auto;
    margin-right: 30rpx;
}
.ui-signitem__date {
    position: relative;
    display: flex;
    width: 100%;
    height: 198rpx;
    padding: 0 10rpx;
    justify-content: space-around;
    /* flex-direction: column; */
}
.ui-signitem__btn {
    display: flex;
    width: 260rpx;
    height: 68rpx;
    font-size:32rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:32rpx;
    background-color: #4BDACF;
    border-radius: 30rpx;
    align-items: center;
    justify-content: center;
}
.ui-signitem__text {
    margin-top: 44rpx;
    font-size:18rpx;
    font-family:PingFang-SC-Medium,PingFang-SC;
    font-weight:500;
    color:rgba(153,153,153,1);
    line-height:18rpx;
}

/*  */
.ui-signitem__day {
    display: flex;
    flex-direction: column;
}
.ui-signitem__num {
    width: 78rpx;
    height: 76rpx;
    margin: 40rpx 0 0 0;
    position: relative;
}
.ui-signitem__num > image {
    width: 100%;
    height: 100%;
}
.ui-signitem__num > text {
    position: absolute;
    left: 0;
    right: 0;
    text-align: center;
    font-size: 28rpx;
    font-family: PingFangSC-Regular,PingFang SC;
    font-weight: 400;
    color:rgba(255,170,0,1);
    line-height: 76rpx;
}
.ui-signitem__which {
    width: 100%;
    height: 22rpx;
    margin-top: 8rpx;
    font-size: 22rpx;
    font-family: PingFangSC-Regular,PingFang SC;
    font-weight: 400;
    color:rgba(255,75,0,1);
    line-height: 22rpx;
    text-align: center;
}

.ui-recordBox {
    width:710rpx;
    height:auto;
    padding: 0 32rpx;
    margin-top: 40rpx;
    background:rgba(255,255,255,1);
    border-radius:16rpx 16rpx 0 0;
}
.ui-recorditem__title {
    width:192rpx;
    height:40rpx;
    margin-top: 40rpx;
    margin-bottom: 20rpx;
    margin-left:auto;
    margin-right: auto;
    font-size:32rpx;
    font-family:PingFangSC-Semibold,PingFang SC;
    font-weight:600;
    color:rgba(51,51,51,1);
    line-height:40rpx;
    text-align: center;
}
.ui-recorditem__friend {
    display: flex;
    width:646rpx;
    height:128rpx;
    /* padding: 24rpx 0; */
    background:rgba(255,255,255,1);
    box-shadow:0 2rpx 0 0 rgba(245,245,245,1),0 -2rpx 0 0 rgba(245,245,245,1);
    align-items: center;
}
.ui-recorditem__avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background-color: #4BDACF;
}
.ui-recorditem__name {
    width:130rpx;
    height:36rpx;
    margin-left: 20rpx;
    font-size:26rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(61,61,61,1);
    line-height: 36rpx;
}
.ui-recorditem__time {
    width:360rpx;
    height:36rpx;
    font-size:26rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
    margin-left: auto;
    text-align: right;

}
.ui-recorditem__end{
    width:646rpx;
    height: 24rpx;
    margin-top: 40rpx;
    margin-bottom: 26rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(187,187,187,1);
    font-size: 24rpx;
    line-height: 24rpx;
    text-align: center;
}
/*  */
.ui-signitem__warnText {
    margin-bottom: 32rpx;
    font-size:20rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:#000000;
    line-height:20rpx;
}
.ui-signItem__line {
    width:618rpx;
    height:4rpx;
    background:rgba(255,240,132,1);
    position: absolute;
    top: 78rpx;
}