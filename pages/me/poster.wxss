@charset "UTF-8";
@import "/libs/common.wxss";

/**poster.wxss**/
page{
	background:rgba(245,245,245,1);
}

.ui-main {
    width: 100%;
}
.ui-posterBox{
	margin: 18rpx 0 0 104rpx;
}

.ui-posterBackground{
	position: relative;
	width: 542rpx;
	height: 770rpx;
}

.ui-posterBackground image{
	position: absolute;
	z-index: -1;
	width: 100%;
	height: 100%;
}

.ui-personalIcon{
	position: absolute;
	display: flex;
	justify-content: center;
	align-items: center;
	width: 106rpx;
	height: 106rpx;
	margin:610rpx 0 0 32rpx;
	background-color: #E6E6E6;
	border-radius: 50%;
	overflow: hidden;
}

.ui-personalIcon image{
	position: absolute;
	z-index: 10;
	width: 96rpx;
	height: 96rpx;
	border-radius: 50%;
}

.ui-personalIdText{
	position: absolute;
	height:26rpx;
	font-size:26rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(255,255,255,1);
	line-height:26rpx;
	margin: 727rpx 0 0 91rpx;
	transform: translateX(-50%);
}

.ui-ExtractQR{
	width:542rpx;
	height:194rpx;
	background:rgba(255,255,255,1);
}

.ui-qrCode{
	position: absolute;
	width: 120rpx;
	height: 120rpx;
	background-image:url('http://www.gzlingren.com:8098/yangtianhe/my_posterQR.png');
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
	margin: 36rpx 0 0 52rpx;
}

.ui-explainText{
	position: absolute;
	height:26rpx;
	font-size:26rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(51,51,51,1);
	line-height:26rpx;
	letter-spacing: 8rpx;
	margin: 86rpx 0 0 202rpx;
}

.ui-posterShare{
	width: 512rpx;
	height: 80rpx;
	background-color: #38D7C5;
	border-radius: 50rpx;
	margin: 82rpx 0 0 120rpx;
	font-size:28rpx;
	font-family:PingFangSC-Semibold;
	font-weight:600;
	color:rgba(255,255,255,1);
	line-height:80rpx;
	text-align: center;
}

/* 模态框 */
.modal-mask {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background:rgba(0,0,0,1);
	opacity: 0.5;
	overflow: hidden;
	z-index: 100;
	color: #fff;
}

.modal-dialog {
	width:100%;
	overflow: hidden;
	position: fixed;
	bottom: 0;
	left: 0;
	z-index: 9999;
	height:230rpx;
	background:rgba(255,255,255,1);
	border-radius:20rpx 20rpx 0rpx 0rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.btn-common{
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
}

.btn-common image{
	width: 100rpx;
	height: 100rpx;
}

.ui-wxImg{
	display: block;
	width: 88rpx;
	height: 88rpx;
	margin: 0 auto 20rpx auto;
}
.btn-common text{
	height:26rpx;
	font-size:26rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(102,102,102,1);
	line-height:26rpx;
	text-align: center;
	margin-top: 20rpx;
}
.ui-share__bd {
	width: 542rpx;
	height: 964rpx;
	margin: auto;
	margin-top: 32rpx;
	position: relative;
}
.ui-share__canvas {
	position: relative;
	top: 9999px;
	width: 542rpx;
	height: 964rpx;
	background-color: #fff;
}
.ui-share__image {
	position: absolute;
	top: 0;
	left: 0;
	width: 542rpx;
	height: 964rpx;
}