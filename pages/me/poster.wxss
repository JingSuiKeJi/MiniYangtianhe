/* 模态框 */
.modal-mask {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background:rgba(0,0,0,1);
	opacity: 0.5;
	overflow: hidden;
	z-index: 100;
	color: #ffffff;
}
.ui-modal {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
.modal-dialog {
	width:100%;
	overflow: hidden;
	position: fixed;
	bottom: 0;
	left: 0;
	z-index: 9999;
	height:230rpx;
	background:rgba(255,255,255,1);
	border-radius:20rpx 20rpx 0rpx 0rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.btn-common{
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
}

.btn-common image{
	width: 100rpx;
	height: 100rpx;
}

.ui-wxImg{
	display: block;
	width: 88rpx;
	height: 88rpx;
	margin: 0 auto 20rpx auto;
}
.btn-common text{
	height:26rpx;
	font-size:26rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(102,102,102,1);
	line-height:26rpx;
	text-align: center;
	margin-top: 20rpx;
}
