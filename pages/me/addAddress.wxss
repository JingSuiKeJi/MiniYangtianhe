@charset "UTF-8";
@import "/libs/common.wxss";

/**addConsignee.wxss**/
page {
	background: rgba(245, 245, 245, 1);
}

.ui-main {
	width: 100%;
	background: #FFFFFF;
}

.ui-common {
	width: 710rpx;
	display: flex;
	align-items: center;
	border-bottom: 2rpx solid #F1F1F1;
	margin-left: 40rpx;
	position: relative;
}

.ui-common:nth-child(4) {
	border-bottom: none;
}

.ui-setDefault {
	border-bottom: none;
}

.ui-name {
	height: 130rpx;
}

.ui-common text:first-child {
	height: 30rpx;
	font-size: 30rpx;
	font-family: PingFang-SC-Medium;
	font-weight: 500;
	color: rgba(51, 51, 51, 1);
	line-height: 30rpx;
}

.ui-common input {
	position: absolute;
	margin-left: 170rpx;
	width: 400rpx;
	font-size: 30rpx;
	font-family: PingFang-SC-Regular;
	font-weight: 400;
	color: rgba(51, 51, 51, 1);
	line-height: 30rpx;
	word-break: keep-all;
	/*不允许字断开*/
	word-wrap: break-word;
	/*在长单词或URL地址内部进行换行*/
}

.ui-common textarea {
	position: absolute;
	margin-left: 170rpx;
	width: 450rpx;
	font-size: 30rpx;
	font-family: PingFang-SC-Regular;
	font-weight: 400;
	color: rgba(51, 51, 51, 1);
	line-height: 30rpx;
	word-break: keep-all;
	/*不允许字断开*/
	word-wrap: break-word;
	/*在长单词或URL地址内部进行换行*/
}

.ui-areaPicker {
	width: 390rpx;
	height: 70rpx;
	margin-top: 58rpx;
	padding-left: 55rpx;
	transform: translateY(-12rpx);
	font-size: 30rpx;
	color: rgba(51, 51, 51, 1);
}

.ui-areaPicker__text {
	position: absolute;
	width: 490rpx;
	margin-left: 170rpx;
	font-size: 30rpx;
	color: rgba(51, 51, 51, 1);
}

.ui-area {
	height: 130rpx;
}
.ui-addressDetailText {
	margin-top: 25rpx;
	width: 450rpx;
	height: 90rpx;
}

.ui-addressDetail {
	display: flex;
	align-items: center;
	height: 150rpx;
	/* padding-bottom: 80rpx; */
}

/* .is-address__detail {
	margin-top: 50rpx;
} */

.ui-tel {
	height: 128rpx;
}

.ui-areaMoreIcon {
	position: absolute;
	right: 40rpx;
	top: 50%;
	transform: translateY(-50%);
	width: 28rpx;
	height: 24rpx;
	background-image: url('https://app.yth-yx.com/mini/my_rightArrow.png');
	background-repeat: no-repeat;
	background-position: center center;
	background-size: contain;
}

.ui-setDefault {
	height: 118rpx;
	background: rgba(245, 245, 245, 1);
}

.ui-setDefault text {
	height: 26rpx;
	font-size: 26rpx;
	font-family: PingFangSC-Regular;
	font-weight: 400;
	color: rgba(153, 153, 153, 1);
	line-height: 26rpx;
}

.ui-set {
	width: 70rpx;
	height: 50rpx;
	margin-left: 450rpx;
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
}

.ui-setOpen {
	background-image: url('https://app.yth-yx.com/mini/my_openRemind.png');
}

.ui-setOff {
	background-image: url('https://app.yth-yx.com/mini/my_closeRemind.png');
}

.btn-save {
	position: fixed;
	z-index: 8888;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 100rpx;
	box-shadow: 0rpx -4rpx 24rpx 0rpx rgba(103, 103, 103, 0.09);
	font-size: 30rpx;
	font-family: PingFangSC-Semibold;
	font-weight: 600;
	color: rgba(255, 255, 255, 1);
	line-height: 100rpx;
	text-align: center;
}

.can {
	background: linear-gradient(137deg, rgba(1, 206, 165, 1) 0%, rgba(94, 221, 218, 1) 100%);
}

.cant {
	background: rgba(204, 204, 204, 1);
}