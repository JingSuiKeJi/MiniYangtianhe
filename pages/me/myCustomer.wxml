<!--myCustomer.wxml-->
<view class="container">
	<navBar title='我的客户' background='linear-gradient(137deg,rgba(1,206,165,1) 0%,rgba(94,221,218,1) 100%)' color='white' iconTheme='white' back="{{true}}"></navBar>
	<view class="ui-main">
		<view class="ui-navBar ">
			<text>用户</text>
			<text>团队</text>
			<text>订单数</text>
			<text>金额</text>
		</view>
		
		<view class="ui-customerInfoBox">
			<view class="ui-customerInfoItems" catchtap="onCustomerCenterTap" data-id='{{idx}}' wx:for="{{customerList}}" wx:for-index="idx" wx:key="idx" wx:for-item="item">
				<view class="ui-userAvatar"><image src="http://www.gzlingren.com:8098/yangtianhe/{{item.userAvatar}}.png"></image></view>
				<view class="ui-userInfo">
					<view class="ui-userId">{{item.userId}}</view>
					<view class="ui-userVipLevel"><image src="http://www.gzlingren.com:8098/yangtianhe/{{item.userVipLevel}}.png"></image></view>
				</view>
				<view class="ui-userLevel">
					<text>一级：{{item.lv1}}</text>
					<text>二级：{{item.lv2}}</text>
				</view>
				<view class="ui-orders">{{item.orders}}</view>
				<view class="ui-amount">¥{{item.amount}}</view>
			</view>
		</view>
	</view>
</view>