.ui-showHidden{
	position: absolute;
	right: 38rpx;
	width: 64rpx;
	height: 64rpx;
	transform: translateY(-12rpx);
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
}

.ui-pullUp{
	background-image:url('http://www.gzlingren.com:8098/yangtianhe/my_pullUp.png');
}

