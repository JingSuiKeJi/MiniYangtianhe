/* 商品足迹列表 */
.ui-footmarkBox{
	width: 100%;
	margin-top:52rpx;
	/* margin-bottom: 126rpx; */
}

.ui-cancelSwitch{
	position: absolute;
	width: 44rpx;
	height: 44rpx;
	margin-top: -12rpx;
	right: 40rpx;
	background-image:url('http://www.gzlingren.com:8098/yangtianhe/my_icDelete.png');
	background-repeat: no-repeat;
	background-position: center center;
	background-size: contain;
}

.ui-footmarkItem{
	width: 100%;
}

.ui-footmarkItem:not(first-child){
	margin-top: 40rpx;
}

.ui-datebox{
	display: flex;
	margin-left: 36rpx;
}

.ui-select{
	width: 32rpx;
	height: 32rpx;
	background-repeat: no-repeat;
	background-position: center center;
	background-size: contain;
	margin-right: 20rpx;
}

.ui-checkIcon{
	background-image:url('http://www.gzlingren.com:8098/yangtianhe/my_check.png');
}

.ui-unCheckIcon{
	background-image:url('http://www.gzlingren.com:8098/yangtianhe/my_unCheck.png');
}

.ui-dateText{
	height:26rpx;
	font-size:26rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(153,153,153,1);
	line-height:26rpx;
	margin-top: 2rpx;
}

.ui-footmarkList{
	display: flex;
	justify-content: space-between;
	align-items: center;
	flex-wrap: wrap;
}

.ui-ListItems{
	width:236rpx;
	height:328rpx;
	background:rgba(255,255,255,1);
	margin-top: 20rpx;
}

.ui-img{
	width: 236rpx;
	height: 236rpx;
}

.ui-img image{
	width: 100%;
	height: 100%;
}

.ui-priceBox{
	margin:30rpx 0 0 28rpx;
	display: flex;
}

.ui-price{
	height:22rpx;
	font-size:22rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(153,153,153,1);
	line-height:22rpx;
	margin-top: 4rpx;
}
.ui-delectBox {
	width: 100%;
	height: 104rpx;
	background-color: #fff;
	text-align: right;
	position: fixed;
	bottom: 0;
	
}
.ui-delete{
	display: inline-block;
	width:148rpx;
	height:60rpx;
	margin-top: 22rpx;
	margin-right: 40rpx;
	background:linear-gradient(137deg,rgba(1,206,165,1) 0%,rgba(94,221,218,1) 100%);
	border-radius:30rpx;
	font-size:26rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(255,255,255,1);
	line-height: 60rpx;
	text-align: center;
}