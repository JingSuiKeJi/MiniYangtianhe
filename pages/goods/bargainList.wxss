    margin-right: 20rpx;
}




.ui-content_top {
    width: 100%;
    height: 70rpx;
    border-bottom: 1rpx solid  #F1F1F1;
}
.ui-content_top .ui-scrollView {
    width: 100%;
    height: 70rpx;
    white-space: nowrap;
}
 .ui-scrollView .ui-scrollView_item{
    height: 100%;
    display: inline-block;
    margin-right: 60rpx;
    vertical-align: bottom;
    
}
.ui-scrollView_item:nth-child(1) {
    margin-left: 20rpx;
}
.ui-scroll_text {
    font-size:28rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:#333333;
    /* line-height:27px; */
}
.ui-scroll_icon {
    width: 46rpx;
    height: 6rpx;
    background-color: transparent;
    border-radius:3rpx;
    margin-top: 20rpx;
