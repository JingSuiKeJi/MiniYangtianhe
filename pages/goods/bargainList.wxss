    width: 100%;
    display: inline-block;
    white-space: nowrap;
    border-bottom: 1rpx solid #F1F1F1;
}
.ui-bottomItem_left {
    display: inline-block;
    position: relative;
}
.ui-bottomItem_left > image {
    width: 288rpx;
    height: 288rpx;
}
.ui-bottomItem_left .ui-timeBox {
    width: 100%;
    height: 40rpx;
    background:rgba(29,196,188,0.6);
    font-size:22rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:#fff;
    line-height:40rpx;
    text-align: center;
     margin-top: -10rpx;
}
.ui-bottomItem_right {
    width: 400rpx;
    display: inline-block;
    vertical-align: top;
    padding-left: 30rpx;
}
.ui-bottomItem_right .ui-rightItem_title {
    font-size: 32rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:#333333;
    line-height:32rpx;
    margin: 38rpx auto 20rpx auto;
}
.ui-bottomItem_right .ui-rightItem_useful {
    
    font-size: 22rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:#888888;
    line-height:28rpx;
    white-space: pre-line;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
   
}
.ui-bottomItem_right .ui-rightItem_info  {
    font-size:22rpx;
    font-family:PingFangSC-Light;
    font-weight:300;
