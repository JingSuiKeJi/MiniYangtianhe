.ui-btnItem_icon {
    width: 44rpx;
    height: 44rpx;
    margin: 5rpx 10rpx auto 5rpx;
}
.ui-btnItem_text {
    font-size:26rpx;
    font-family:PingFang-SC-Regular;
    font-weight:400;
    color:#fff;
