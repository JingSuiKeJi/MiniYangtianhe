/* pages/goods/groupList.wxss */
.ui-imgBox {
    width: 100%;
    text-align: center;
    margin-top: 20rpx;
}
.ui-imgBox > image {
    width: 95%;
    height: 236rpx;
    display: inline-block;
}
.ui-content_top {
    width: 100%;
    height: 70rpx;
    border-bottom: 1rpx solid  #F1F1F1;
}
.ui-content_top .ui-scrollView {
    width: 100%;
    height: 70rpx;
    white-space: nowrap;
}
 .ui-scrollView .ui-scrollView_item{
    height: 100rpx;
    display: inline-block;
    margin-right: 60rpx;
    vertical-align: bottom;
    
}
.ui-scrollView_item:nth-child(1) {
    margin-left: 20rpx;
}
.ui-scroll_text {
    font-size:28rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:#333333;
    /* line-height:27px; */
}
.ui-scroll_icon {
    width: 46rpx;
    height: 6rpx;
    background-color: transparent;
    border-radius:3rpx;
    margin-top: 22rpx;
    margin-left: 30%;
}
.ui-scrollView_item .ui-selectTex {
    background-color: #20CAB4;
    margin-left: 0;
}
.ui-bottom_item {
    width: 100%;
    display: inline-block;
    white-space: nowrap;
    border-bottom: 1rpx solid #F1F1F1;
}
.ui-bottomItem_left {
    display: inline-block;
}
.ui-bottomItem_left > image {
    width: 226rpx;
    height: 304rpx;
}
.ui-bottomItem_right {
    width: 470rpx;
    display: inline-block;
    vertical-align: top;
    padding-left: 30rpx;
}
.ui-bottomItem_right .ui-rightItem_title {
    font-size: 32rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:#333333;
    line-height:32rpx;
    margin: 38rpx auto 20rpx auto;
}
.ui-bottomItem_right .ui-rightItem_useful {
    
    font-size: 22rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:#888888;
    line-height:28rpx;
    white-space: pre-line;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
   
}
.ui-bottomItem_right .ui-rightItem_info > text {
    font-size:22rpx;
    font-family:PingFangSC-Light;
    font-weight:300;
    color:#999999;
    line-height:22rpx;
    display: inline-block;
    
}
.ui-rightItem_info > text:nth-child(2) {
    margin-left: 20rpx;
}
.ui-rightItem_info > text:nth-child(3) {
    float: right;
    margin-right: 50rpx;
    color: #20CAB4;
    margin-top: 27rpx;
}
.ui-rightItem_priceText {
    font-size:34rpx;
    font-family:PingFangSC-Medium;
    font-weight:500;
    color:#DE4C3E;
    line-height:34rpx;
}
.ui-rightItem_button {
    width:120rpx;
    height:48rpx;
    background:linear-gradient(137deg,rgba(1,206,165,1) 0%,rgba(94,221,218,1) 100%);
    border-radius:26rpx;
    color: #fff;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    line-height: 48rpx;
    text-align: center;
    display: inline-block;
    float: right;
    margin-right: 20rpx;
    margin-top: 10rpx;
}
