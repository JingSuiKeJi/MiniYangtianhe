/* pages/goods/join.wxss */
.main {
    width: 100%;
}
.ui-headerBox {
    border: 40rpx solid #76DFDD;
}
.ui-contentBox {
    height: 260rpx;
    white-space: nowrap;
}
.contentItem_left {
    height: 100%;
    display: inline-block;
    /* position: relative; */
    
}
.ui-leftItem_textIcon {
    width: 124rpx;
    height: 126rpx;
    vertical-align: top;
    display: inline-block;
}
.ui-leftItem_imgIcon {
    width: 180rpx;
    height: 200rpx;
    display: inline-block;
    position: relative;
    left: -60rpx;
    top: 40rpx
   
}
.contentItem_center {
    display: inline-block;
    margin-left: -30rpx;
}
.centerItem_title {
    font-size:26rpx;
    font-family:PingFangSC-Medium;
    font-weight:500;
    color:#333333;
    line-height:36rpx;
}
.centerItem_scale > text {
    font-size:22rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:#999999;
    line-height:22rpx;
}
.centerItem_scale > text:nth-child(2) {
    margin-left: 20rpx;
}
.centerItem_nowPrice {
    font-size:34rpx;
    font-family:PingFangSC-Medium;
    font-weight:500;
    color:#EA6363;
    line-height:34rpx;
}
.centerItem_prePrice {
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:#999999;
    line-height:22rpx;
    text-decoration: line-through;
    margin-left: 20rpx;
}
.contentItem_right {
    height: 100%;
    display: inline-block;
    line-height: 260rpx;
    color: #999999;
    vertical-align: top;
    font-weight:400;
    margin-left: 70rpx;
}
.ui-bodyBox {
    width: 100%;
    margin-top: 100rpx;
    text-align: center;
}
.ui-bodyItem_top {
    width: 100%;
}
.ui-topItem_text {
    font-size:26rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:#999999;
    line-height:36px;
}
.ui-topItem_time {
    width: 68rpx;
    height: 52rpx;
    background-color: #333333;
    border-radius: 7rpx;
    font-size:34rpx;
    font-family:PingFangSC-Medium;
    font-weight:500;
    color:#fff;
    text-align: center;
    margin: auto 20rpx;
    display: inline-block;
    vertical-align: middle;
}
.ui-bodyItem_middle {
    width: 100%;
    text-align: center;
    font-size:30rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(32,202,180,1);
    line-height:30rpx;
    margin: 70rpx auto;
}
.ui-bodyItem_bottom  {
    width: 100%;
    text-align: center;
}
.ui-bodyItem_bottom > image {
    width: 100rpx;
    height: 100rpx;
}
.ui-bodyItem_bottom > image:nth-child(2) {
   margin: auto 35rpx;
}
.ui-bodyItem_bottom {
    width: 100%;
    position: relative;
}
.ui-bodyItem_bottom  .ui-botomItem_bgIcon {
    width: 512rpx;
    height: 80rpx;
    margin: 50rpx 100rpx;
}
.ui-botomItem_text {
    font-size:28rpx;
    font-family:PingFangSC-Semibold;
    font-weight:600;
    color:#fff;
    position: absolute;
    top: 70rpx;
    left: 300rpx;
}