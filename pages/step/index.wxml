                <view class="ui-leftItem_text">养步乐</view>
            </view>
            <view class="ui-stepTapBox_center">
                <view class="ui-block__item" 
                    wx:for="{{blockList}}" 
                    wx:key="{{index}}"  
                    style="left: {{item.left*100+155+'rpx'}};bottom: {{item.bottom*100 + 120+'rpx'}};-webkit-transform: rotate({{item.rotate+'deg'}}); -moz-transform: rotate({{item.rotate+'deg'}});-ms-transform: rotate({{item.rotate+'deg'}});-o-transform: rotate({{item.rotate+'deg'}}); transform: rotate({{item.rotate+'deg'}});background-color: {{index >= BMIIndex ?  '#5CEEDE': '#69CCBC'}}"
                ></view>
                <view class="ui-centerItem_stepText">今日步数</view>
                <view class="ui-centerItem_detailText">6581<text>步</text></view>
                <view class="ui-leftItem_loadText" bindtap="onStepTap">{{step}}</view>
            </view>
            <view class="ui-stepTapBox_right">今日排名 ：未上榜</view>
            <view class="ui-stepTapBox_aimStepBox">目标10000步</view>
            <image src="{{filter.getLocalPhoto('step_questionIcon.png')}}" class="ui-stepTapBox__questionIcon" bindtap="onIllustrateTap"/>
          </view>
          <view class="ui-stepContentBox">
              <view class="ui-contenItem" bindtap="onIllustrationTap">
                 <view class="ui-contenItem__text">413<text >福气</text></view>
                 <view class="ui-contenItem__title">累计福气</view>
              </view>
              <view class="ui-contenItem" bindtap="onCheckTap">
                 <view class="ui-contenItem__text">13<text >位</text></view>
                 <view class="ui-contenItem__title">我的乐友</view>
              </view>
              <view class="ui-contenItem">
                 <view class="ui-contenItem__text ui-contenItem__step" >2213<text >步数</text></view>
                 <view class="ui-contenItem__title">累计步数</view>
              </view>
          </view>
          <view class="ui-historyBox">
              <image src="{{filter.getLocalPhoto('step_historyIcon.png')}}"  class="ui-historyItem__icon"/>
              <view class="ui-historyItem__text">— 历史记录 —</view>
              <view class="ui-hirtoryItem__list" wx:for="{{list}}" wx:key="{{index}}" style="color: {{ (item.status== 0 ? '#20CAB4' : '' ) || (item.status== 1 ? '#999999' : '' )}}">
                  <text class="ui-listItem__time">{{item.time}}</text>
                  <text class="ui-listItem__step">{{item.step}}</text>
                  <text class="ui-listItem__status">{{item.text}}</text>
              </view>
          </view>
          <view class="ui-bottomTex">为你加油，一起努力吧 ～</view>
