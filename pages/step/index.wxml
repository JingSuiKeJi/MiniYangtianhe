<!--pages/step/index.wxml-->
<wxs module="filter" src="../../filter/filter.wxs"></wxs>
<view class="contain">
    <navBar title='养步乐' background='white' color='black' iconTheme='black' back="{{true}}"></navBar>
    <view class='tab-bottom'></view>
    <view class="main">
        <view class="ui-stepBox">
            <view class="ui-stepTapBox">
                <view class="ui-stepTapBox_left">
                    <!-- <image src="{{filter.getLocalPhoto('squareness.png')}}" /> -->
                    <view>
                        <image src="{{filter.getLocalPhoto('run.png')}}" class="ui-leftItem_icon" />
                    </view>
                    <view class="ui-leftItem_text">养步乐</view>
                </view>
                <view class="ui-stepTapBox_center">
                    <view class="ui-block__item" wx:for="{{blockList}}" wx:key="{{index}}" 
                        style="left: {{item.left*100+155+'rpx'}};bottom: {{item.bottom*100 + 120+'rpx'}};-webkit-transform: rotate({{item.rotate+'deg'}}); -moz-transform: rotate({{item.rotate+'deg'}});-ms-transform: rotate({{item.rotate+'deg'}});-o-transform: rotate({{item.rotate+'deg'}}); transform: rotate({{item.rotate+'deg'}});background-color: {{index >= BMIIndex ?  '#EEEEEE': '#69CCBC'}}"></view>
                    <view class="ui-centerItem_stepText">今日步数</view>
                    <view class="ui-centerItem_detailText">{{stepInfo.todayStep}}
                        <text>步</text>
                    </view>
                    <view class="ui-leftItem_loadText" bindtap="onStepTap">{{step}}</view>
                </view>
                <view class="ui-stepTapBox_right">今日排名 ：{{stepInfo.rank}}</view>
                <view class="ui-stepTapBox_aimStepBox">目标{{stepInfo.targetStep}}步</view>
                <image src="{{filter.getLocalPhoto('step_questionIcon.png')}}" class="ui-stepTapBox__questionIcon" bindtap="onIllustrateTap"></image>
            </view>
            <view class="ui-stepContentBox">
                <view class="ui-contenItem" bindtap="onIllustrationTap">
                    <view class="ui-contenItem__text">{{stepInfo.points}}
                        <text>福气</text>
                    </view>
                    <view class="ui-contenItem__title">累计福气</view>
                </view>
                <view class="ui-contenItem" bindtap="onCheckTap">
                    <view class="ui-contenItem__text">{{stepInfo.leyouNum}}
                        <text>位</text>
                    </view>
                    <view class="ui-contenItem__title">我的乐友</view>
                </view>
                <view class="ui-contenItem">
                    <view class="ui-contenItem__text ui-contenItem__step">{{stepInfo.totalStep}}
                        <text>步数</text>
                    </view>
                    <view class="ui-contenItem__title">累计步数</view>
                </view>
            </view>
            <view class="ui-historyBox">
                <image src="{{filter.getLocalPhoto('step_historyIcon.png')}}" class="ui-historyItem__icon" />
                <view class="ui-historyItem__text">— 历史记录 —</view>
                <view class="ui-hirtoryItem__list" wx:for="{{list}}" wx:key="{{index}}">
                    <text class="ui-listItem__time">{{filter.getDay(item.createTime)}}</text>
                    <text class="ui-listItem__step">{{item.step}}</text>
                    <text class="ui-listItem__status" style="color: {{ (item.status== 1 ? '#20CAB4' : '' ) || (item.status== 3 ? '#999999' : '' )}}">{{filter.getStatus(item.status)}}</text>
                </view>
            </view>
            <view class="ui-bottomTex">为你加油，一起努力吧 ～</view>
        </view>
    </view>
</view>